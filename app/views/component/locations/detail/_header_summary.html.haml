%div.content-header
  %span.utility-links
    %span
      %a.button-utility.button-back{ href: "#{locations_url(@query_parameters)}##{location.id}", target: '_self' }
        %i.fa.fa-arrow-left{ aria: { hidden: 'true' } }
        %span Back
    %span.header-right><
      %a.button-utility.button-share-email{ href: mailto_url, aria: { label: "Share resource via email" } }
        %i.fa.fa-share-square-o.fa-lg{ aria: { hidden: 'true' } }
        %span.visuallyhidden Share resource via email
      %button.fa.fa-heart-o.favorite-toggle.fa-lg{ "aria-label" => "Add to favorites", "aria-hidden" => 'true' }
        

  .left-column
    .floating-content.hide
      %h1{ tabindex: "0", aria: { label: full_name_content_for(location) } }
        = superscript_ordinals(full_name_content_for(location))
