- service_categories = service[:categories].select { |c| c[:type] == 'service' }
- if service_categories.present?
  - sorted_categories = service_categories.sort { |a, b| a[:id].to_i - b[:id].to_i }
  %section.service-categories-box
    %h1
      = t('service_fields.categories.service')
    %section.location-sidebar-content
      %section.service-categories{ itemscope: '', itemtype: 'http://schema.org/Service' }
        %div{  itemscope: '', itemtype: 'http://schema.org/serviceType' }
          = sorted_categories.map {|c| c[:name] }.join(', ')

