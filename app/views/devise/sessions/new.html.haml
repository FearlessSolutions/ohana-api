.min-h-full.flex.flex-col.justify-center.py-12
  - if request.host == 'ohana-api-demo.herokuapp.com' && resource.is_a?(Admin)
    To try out the admin interface, sign in with one of these
    #{link_to 'three demo emails and passwords', 'https://github.com/codeforamerica/ohana-api/blob/master/db/seeds.rb#L24-43'}.
  .sm:mx-auto.sm:w-full.sm:max-w-md.w-auto
    %h3.mt-6.text-center.text-3xl.text-gray-900
      Sign in to your account

  .p-2.shadow-md
    .mt-8.sm:mx-auto.sm:w-full.sm:max-w-md
      = form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form', class: 'space-y-6' }) do |f|
        .mt-1
          = f.label :email, class: 'block text-sm font-medium text-gray-700'
          = f.email_field :email, autofocus: true, required: true, class: 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'
        .mt-1
          = f.label :password, class: 'block text-sm font-medium text-gray-700'
          = f.password_field :password, autocomplete: 'off', class: 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'

        .flex.items-center.justify-between
          .flex.items-center
            = f.check_box :remember_me, class: 'h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded'
            = f.label :remember_me, class: 'ml-2 block text-sm text-gray-900'
          .text-sm 
            - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
              = link_to t('navigation.forgot_your_password'), new_password_path(resource_name), class: 'font-medium text-indigo-600 hover:text-indigo-500 underline'

        = f.submit t('navigation.sign_in'), class: 'w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500'
    .mt-6 
      .relative 
        .absolute.inset-0.flex.items-center 
          .w-full.border-t.border-gray-300 
        .relative.flex.justify-center.text-md 
          -# note: below should be bg-{whatever the actual background color is} not white
          %span.px-2.bg-white.text-gray-500
            Need to create an account?
    .mt-8.sm:mx-auto.sm:w-full.sm:max-w-md.text-center.mb-8           
      - if devise_mapping.registerable? && controller_name != 'registrations'
        = link_to t('navigation.sign_up'), new_registration_path(resource_name), class: 'text-md font-medium text-indigo-600 hover:text-indigo-500 p-4 underline'      
    -# = render 'devise/shared/links'
