= field_set_tag do
  .form-group
    = f.label :address_1, for: 'address_1'
    .row
      .col-sm-6
        = f.text_field :address_1, class: 'form-control', id: 'address_1'
  .form-group
    = f.label :address_2, for: 'address_2'
    .row
      .col-sm-6
        = f.text_field :address_2, class: 'form-control', id: 'address_2'
  .form-group
    = f.label :city, for: 'city'
    .row
      .col-sm-6
        = f.text_field :city, maxlength: 255, class: 'form-control', id: 'city'
  .form-group
    = f.label :state_province, for: 'state_province'
    .row
      .col-sm-2
        = f.text_field :state_province, maxlength: 2, class: 'form-control', id: 'state_province'
  .form-group
    = f.label :postal_code, for: 'postal_code'
    .row
      .col-xs-4
        = f.text_field :postal_code, maxlength: 5, class: 'form-control', id: 'postal_code'
  .form-group
    = f.label :country, for: 'country'
    .row
      .col-sm-2
        = f.text_field :country, maxlength: 2, class: 'form-control', id: 'country'
  = f.hidden_field :_destroy
  = link_to t('admin.buttons.delete_street_address'), '#', class: 'btn btn-danger delete_association'
